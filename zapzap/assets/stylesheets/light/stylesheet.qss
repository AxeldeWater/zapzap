/***** QWIDGET *****/
QWidget
{
    color: #41525D;
    background-color:#F0F2F5;
    selection-background-color: rgba(51, 164, 223, 0.5);
    selection-color: #41525D;
    background-clip: border;
    border-image: none;
}

QWidget#blur{
	background-color: rgba(0, 0, 0, 0.7);
}

