/***** QWIDGET *****/
QWidget
{
    color: #D0D4D7;
    background-color: #31363b;
    selection-background-color: #3daee9;
    selection-color: #D0D4D7;
    background-clip: border;
    border-image: none;
}

QWidget#blur{
	background-color: rgba(0, 0, 0, 0.7);
}

