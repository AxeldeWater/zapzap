/****** QPUSHBUTTON ******/ 

QPushButton#openDrawerButton
{
    background-color:  rgba(100, 100, 100, 0.3);
    border: 0.01em solid rgba(100, 100, 100, 0.3);
    border-radius: 0.09em;
}

QPushButton
{
    height: 25px
}

/* Bot√£o ok */
QPushButton#okButton
{
    color: #FFFFFF;
    background-color: #008069;
    border: 0.04em solid  #008069;
    padding: 0.23em;
    border-radius: 0.09em;
    outline: none;
    min-height: 1.1em;
    height: 25px
}

QPushButton#okButton:hover
{
    background-color:#005849;
    border: 0.04em solid  #005849;
    
}

/****** QLINEEDIT ******/
QLineEdit
{
    background-color: #1d2023;
    padding: 0.23em;
    border-style: solid;
    border: 0.04em solid #76797c;
    border-radius: 0.09em;
    color: #D0D4D7;
    height: 25px
}

QLineEdit:hover,
QLineEdit:focus
{
    border: 0.04em solid #008069;
    color: #eff0f1;
}
/****** QGroupBox ******/

QGroupBox
{
    /* Need to make sure the groupbox doesn't compress below the title. */
    min-height: 1.2em;
    border: 0.04em solid #76797c;
    border-radius: 0.09em;
    margin-top: 0.5em;
    padding-top: 1em;
}

QGroupBox:focus
{
    border: 0.04em solid #76797c;
    border-radius: 0.09em;
}

QGroupBox::title
{
    /* We need to move 0.6em up to be inside the lines, +1em for padding. */
    top: -1.6em;
    subcontrol-origin: content;
    subcontrol-position: top left;
    background: #31363b;
    padding-left: 0.2em;
    padding-right: 0.2em;
}

/*** QCHECKBOX */

QCheckBox
{
    spacing: 0.23em;
    outline: none;
    color: #eff0f1;
    margin-bottom: 0.09em;
    opacity: 200;
}

QCheckBox:disabled
{
    color: #b0b0b0;
}

QCheckBox::indicator
{
    width: 1em;
    height: 1em;
}
